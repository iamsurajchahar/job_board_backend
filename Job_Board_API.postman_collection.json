            },
            "url": {
              "raw": "{{base_url}}/api/jobs/1",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs", "1"]
            }
          }
        },
        {
          "name": "Delete Job",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{company_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/jobs/1",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs", "1"]
            }
          }
        },
        {
          "name": "Get Company Jobs",
